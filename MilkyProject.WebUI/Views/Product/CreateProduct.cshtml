@model MilkyProject.WebUI.Dtos.ProductDtos.CreateProductDto
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<form method="post">
    <div class="container">
        <br /><br />
        <label>Product Name</label>
        <input type="text" asp-for="productName" class="form-control" />
        <br />
        <label>Old Price</label>
        <input type="text" asp-for="oldPrice" class="form-control" />
        <br />
        <label>New Price</label>
        <input type="text" asp-for="newPrice" class="form-control" />
        <br />
        <label>Product ImageUrl</label>
        <input type="text" asp-for="imageUrl" class="form-control" />
        <br />
        <label>Status</label>
        <input type="text" asp-for="status" class="form-control" />
        <br />
        <button class="btn btn-primary">Create Product</button>
    </div>
</form> 