@model List<MilkyProject.WebUI.Dtos.ProductDtos.ResultProductWithCategoryDto>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Product Name</th>
            <th>Old Price</th>
            <th>New Price</th>
            <th>Status</th>
            <th>Category Name</th>
            <th>Update Product</th>
            <th>Delete Product</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.ProductName</td>
                <td>@item.OldPrice</td>
                <td>@item.NewPrice</td>
                <td>@item.Status</td>
                <td>@item.category.CategoryName</td>
                <td><a href="#" class="btn btn-danger">Update</a></td>
                <td><a href="#" class="btn btn-success">Delete</a></td>
            </tr>
        }
    </table>
    <a href="#" class="btn btn-primary">Yeni Ürün Girişi</a>
</div>