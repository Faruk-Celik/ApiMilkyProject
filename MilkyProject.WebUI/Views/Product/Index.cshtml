@model List<MilkyProject.WebUI.Dtos.ResultProductDto>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div>

    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Product Name</th>
            <th>Old Price</th>
            <th>New Price</th>
            <th>Status</th>
            <th>Update Product</th>
            <th>Delete Product</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.productId</td>
                <td>@item.productName</td>
                <td>@item.oldPrice</td>
                <td>@item.newPrice</td>
                <td>@item.status</td>
                <td> <a href="/Product/UpdateProduct/@item.productId" class="btn btn-danger">Update</a></td>
                <td> <a href="/Product/DeleteProduct/@item.productId" class="btn btn-danger">Delete</a></td>


            </tr>
        }
    </table>
    <a href="#" class="btn btn-success">Add New Product</a>
</div>


